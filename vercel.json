{
    "version": 2,
    "installCommand": "npm install --legacy-peer-deps",
    "buildCommand": "cd client && npm install --legacy-peer-deps --include=dev && npm run build",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}